<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sushil.task.Home"
    tools:showIn="@layout/app_bar_home">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="15dp"
        android:layout_height="200dp"
        android:background="@drawable/round"
        android:text=""
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="87dp" />

    <ImageButton
        android:id="@+id/send"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView3"
        android:layout_marginStart="44dp"
        android:layout_marginTop="90dp"
        android:layout_toEndOf="@+id/textView3"
        android:background="@android:color/background_light"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/sendicon" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/send"
        android:layout_below="@+id/send"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:text="SEND" />

    <ImageButton
        android:id="@+id/recieve"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/send"
        android:layout_centerHorizontal="true"
        android:background="@android:color/background_light"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/receiveicon" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/recieve"
        android:layout_alignTop="@+id/textView4"
        android:layout_centerHorizontal="false"
        android:layout_marginLeft="-9dp"
        android:text="RECIEVE" />

    <ImageButton
        android:id="@+id/buy"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/recieve"
        android:layout_marginEnd="62dp"
        android:background="@android:color/background_light"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/transfericon" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignStart="@+id/buy"
        android:layout_marginLeft="-12dp"
        android:text="BUY/SELL" />

    <TextView
        android:id="@+id/btc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="BTC"
        android:textColor="@android:color/darker_gray"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ltc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eth"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:textSize="10sp"
        android:layout_toEndOf="@+id/textView3"
        android:text="LTC"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/eth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btc"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="ETH"
        android:textColor="#FF425D87"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="14dp"
        android:text="STM"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold"
        android:layout_below="@+id/ltc"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:id="@+id/dsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stm"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView3"
        android:text="DSH"
        android:textSize="10sp"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btcl"
        android:layout_width="55dp"
        android:layout_height="5dp"
        android:layout_alignTop="@+id/btc"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/btc"
        android:background="@drawable/roundg" />

    <TextView
        android:id="@+id/ethl"
        android:layout_width="27dp"
        android:layout_height="5dp"
        android:layout_alignBottom="@+id/eth"
        android:layout_alignStart="@+id/btcl"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round" />

    <TextView
        android:id="@+id/ltcl"
        android:layout_width="40dp"
        android:layout_height="5dp"
        android:layout_alignTop="@+id/ltc"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/ltc"
        android:background="@drawable/roundg" />

    <TextView
        android:id="@+id/stml"
        android:layout_width="2dp"
        android:layout_height="5dp"
        android:layout_alignTop="@+id/stm"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/stm"
        android:background="@drawable/roundg" />

    <TextView
        android:id="@+id/dshl"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_alignTop="@+id/dsh"
        android:layout_marginStart="12dp"
        android:layout_marginTop="6dp"
        android:layout_toEndOf="@+id/dsh"
        android:background="@drawable/roundg" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btc"
        android:layout_marginEnd="19dp"
        android:text="ETHEREUM BALANCE"
        android:textColor="@android:color/darker_gray"
        android:textSize="8sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="75dp"
        android:layout_height="2dp"
        android:layout_alignEnd="@+id/textView15"
        android:layout_below="@+id/textView15"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/stm"
        android:layout_alignEnd="@+id/textView16"
        android:text="23.97642"
        android:textColor="#FF425D87"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView17"
        android:layout_below="@+id/textView17"
        android:text="$5976.47"
        android:textColor="#A9A9A9"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0916 BTC"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/dshl"
        android:layout_alignBottom="@+id/dshl"
        android:layout_alignStart="@+id/textView18" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dshl"
        android:layout_toStartOf="@+id/textView19"
        android:text="1 ETH = "
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView19"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="23dp"
        android:text="0.98%"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView21"
        android:layout_marginRight="10dp"
        android:layout_toStartOf="@+id/textView21"
        android:text="DAY"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView21"
        android:layout_below="@+id/textView21"
        android:text="2.65%"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView22"
        android:layout_below="@+id/textView22"
        android:text="WEEK"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="29dp"
        android:background="@drawable/gradient"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/textView25">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:text="TRANSACTION HISTORY"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/textView27"
            android:layout_width="75dp"
            android:layout_height="2dp"
            android:layout_below="@+id/textView26"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/outgoing1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="04 SEPTEMBER 2017 | 8:32 PM"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="10sp"
                android:typeface="monospace"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="0.084316 ETH"
            android:textColor="@android:color/darker_gray"
            android:typeface="monospace"
            android:layout_marginLeft="80dp"/>

    </LinearLayout>

</RelativeLayout>
